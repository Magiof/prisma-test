// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model User {
  id     String @id
  name   String
  depart String

  meetings Meeting[]
}

model Meeting {
  id            Int         @id @default(autoincrement())
  host          User        @relation(fields: [hostId], references: [id])
  hostId        String
  meetingRoom   MeetingRoom @relation(fields: [meetingRoomId], references: [id])
  meetingRoomId Int
  startDate     DateTime
  endDate       DateTime
}

model MeetingRoom {
  id       Int    @id @default(autoincrement())
  location Int
  floor    Int
  size     String

  meetings Meeting[]
}
